<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/background_blue_light"
    tools:context=".Activities.RegisterActivity">

    <android.support.v7.widget.Toolbar
        android:background="@color/appleGreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize">
        <android.support.v7.widget.AppCompatTextView
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"/>
    </android.support.v7.widget.Toolbar>
        <android.support.v7.widget.AppCompatTextView
            android:layout_marginTop="@dimen/margin_division"
            android:layout_below="@+id/toolbar"
            android:id="@+id/tv_register_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_name"
            android:paddingEnd="@dimen/margin_division"
            android:paddingStart="@dimen/margin_division" />

        <android.support.v7.widget.AppCompatEditText
            android:layout_below="@+id/toolbar"
            android:layout_toEndOf="@+id/tv_register_name"
            android:id="@+id/et_login_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_login_name"
            android:paddingEnd="@dimen/margin_division"
            android:paddingStart="@dimen/margin_division" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_alignBottom="@+id/et_login_password"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_division"
            android:layout_below="@+id/tv_register_name"
            android:id="@+id/tv_register_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:paddingEnd="@dimen/margin_division"
            android:paddingStart="@dimen/margin_division" />

        <android.support.v7.widget.AppCompatEditText
            android:layout_alignStart="@+id/et_login_name"
            android:layout_below="@+id/et_login_name"
            android:layout_toEndOf="@+id/tv_register_password"
            android:id="@+id/et_login_password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_password"
            android:paddingEnd="@dimen/margin_division"
            android:paddingStart="@dimen/margin_division" />
        <android.support.v7.widget.AppCompatTextView
            android:layout_alignBottom="@+id/et_confirm_login_password"
            android:layout_marginTop="@dimen/margin_division"
            android:layout_below="@+id/tv_register_password"
            android:id="@+id/tv_confirm_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_password"
            android:paddingEnd="@dimen/margin_division"
            android:paddingStart="@dimen/margin_division" />

        <android.support.v7.widget.AppCompatEditText
            android:layout_alignStart="@+id/et_login_password"
            android:layout_below="@+id/et_login_password"
            android:layout_toEndOf="@+id/tv_confirm_password"
            android:id="@+id/et_confirm_login_password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_password"
            android:paddingEnd="@dimen/margin_division"
            android:paddingStart="@dimen/margin_division" />
    <android.support.v7.widget.AppCompatButton
        android:layout_marginTop="@dimen/margin_division"
        android:layout_below="@+id/tv_confirm_password"
        android:id="@+id/btn_register"
        android:background="@color/appleGreen"
        android:layout_marginStart="@dimen/margin_division"
        android:layout_marginEnd="@dimen/margin_division"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register"/>
</RelativeLayout>

