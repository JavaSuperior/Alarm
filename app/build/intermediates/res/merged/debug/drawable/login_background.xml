<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- 圆角 -->
            <!-- 设置圆角半径 -->
            <corners android:bottomLeftRadius="10dp" android:bottomRightRadius="10dp" android:radius="9dp" android:topLeftRadius="10dp" android:topRightRadius="10dp" />
            <!--设置填充颜色-->
            <!--<solid></solid>-->
            <!-- 渐变 -->
            <gradient android:angle="45" android:centerColor="@android:color/holo_blue_light" android:centerX="0" android:centerY="0" android:endColor="@android:color/black" android:gradientRadius="90" android:startColor="@android:color/white" android:type="radial" android:useLevel="true" />

            <!-- 间隔 -->
            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
            <!-- 各方向的间隔 -->

            <!-- 大小 -->
            <size android:width="50dp" android:height="50dp" />
            <!-- 宽度和高度 -->

            <!-- 填充 -->
            <solid android:color="@android:color/white" />
            <!-- 填充的颜色 -->

            <!-- 描边 dash 表示破折号-->
            <!--android:dashWidth="1dp"-->
            <!--android:dashGap="2dp"-->
            <stroke android:width="2dp" android:color="@android:color/black" />

        </shape>

</selector>