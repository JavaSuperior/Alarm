<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="clock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!-- This theme is similar to the Theme.Dialog.Alert but does not rely on a
         non-public resource. -->
    <style name="alarm_alert" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="RoundTouchButton">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/incall_round_button</item>
    </style>

    <style name="ButtonStripLeft">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_strip_trans_left</item>
    </style>

    <style name="ButtonStripMiddle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_strip_trans_middle</item>
    </style>

    <style name="ButtonStripRight">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_strip_trans_right</item>
    </style>

    <style name="alarm_list_left_column">
        <item name="android:layout_width">68dip</item>
        <item name="android:layout_height">68dip</item>
    </style>

    <style name="AlarmSwitchTheme">
        <!--<item name="android:track">@drawable/start_play</item>-->
        <item name="android:colorControlActivated">@color/accent</item>
    </style>
    <style name="list_item_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="list_item_content">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/ripple</item>
        <item name="colorAccent">@color/accent</item>
    </style>
    <color name="labelUnselect">#bbbbbb</color>
    <color name="labelSelect">#000000</color>
    <color name="accent">#fe9a99</color>
    <color name="primary">#7fded8</color>
    <color name="primary_pressed">#00acc1</color>
    <color name="ripple">#6BBEB8</color>
    <color name="appleGreen">#7fded8</color>
    <style name="ShareDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="preferenceBackground">
        <item name="android:textColor">@color/appleGreen</item>
        <item name="android:colorBackgroundCacheHint">#00000000</item>
    </style>
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="android:listDivider">@drawable/divider_bg</item>
    </style>
    <style name="styleAlert" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
    <style name="styleStarDisplay">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
    </style>

</resources>

