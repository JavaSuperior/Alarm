<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blue_light"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:background="@color/appleGreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:minHeight="10dp">
     <android.support.v7.widget.AppCompatImageView
         android:id="@+id/img_back"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:background="@mipmap/ic_item_arrow_left"/>
    <android.support.v7.widget.AppCompatTextView
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/personal"/>
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_division"
        android:layout_marginStart="@dimen/margin_division"
        android:layout_marginTop="@dimen/margin_division"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatEditText
            android:drawablePadding="@dimen/margin_division"
            android:id="@+id/et_login_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_background"
            android:drawableStart="@drawable/ic_login_name"
            android:hint="@string/hint_login_name"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/background_dark"
            android:textColorHint="@android:color/darker_gray" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_login_warnings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_division"
        android:layout_marginStart="@dimen/margin_division"
        android:layout_marginTop="@dimen/margin_division"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatEditText
            android:paddingStart="4dp"
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_background"
            android:drawableStart="@mipmap/ic_lock"
            android:drawablePadding="@dimen/margin_division"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:textColor="@android:color/background_dark"
            android:textColorHint="@android:color/darker_gray" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_display_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_division"
        android:layout_marginStart="@dimen/margin_division"
        android:layout_marginTop="@dimen/margin_division"
        android:gravity="center"
        android:background="@color/appleGreen"
        android:text="@string/login" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_tip_no_account"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_division"
            android:text="@string/tip_no_account"
             />

        <android.support.v7.widget.AppCompatTextView
            android:layout_marginStart="@dimen/margin_division"
            android:layout_marginTop="@dimen/margin_division"
            android:layout_toEndOf="@+id/tv_tip_no_account"
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/appleGreen"
            android:text="@string/register" />

    </RelativeLayout>
</android.support.v7.widget.LinearLayoutCompat>